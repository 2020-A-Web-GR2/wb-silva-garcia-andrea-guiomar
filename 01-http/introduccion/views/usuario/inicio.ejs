    <button type="submit"> Buscar</button>
</form>


<table>
    <!--table row-->
    <tr>
        <!--table header-->
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Cedula</th>
        <th>Acciones</th>
    </tr>
    <% arregloUsuarios.forEach( (objeto)=>{ %>
        <tr>
